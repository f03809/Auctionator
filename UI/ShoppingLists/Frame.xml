<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame name="AuctionatorAHFrame" inherits="SimplePanelTemplate" parent="UIParent" hidden="true">
    <Size x="500" />

    <Layers>
      <Layer level="OVERLAY">
        <FontString inherits="GameFontNormal" text="Auctionator">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
              <Offset>
                <AbsDimension x="0" y="-10"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>

    <Frames>
      <!-- Shopping List Dropdown -->
      <Frame inherits="UIDropDownMenuTemplate" name="$parentListDropDown">
        <Size>
          <AbsDimension x="400" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
            <Offset>
              <AbsDimension x="0" y="-30"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad function="Auctionator.ShoppingLists.LoadListDropdown" />
        </Scripts>
      </Frame>

      <!-- List Editing Buttons -->
      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parentCreateList" text="Create List">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="3" y="3" />
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parentAddItem" text="Add Item">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parentCreateList" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="3" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parentRemoveItem" text="Remove Item">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parentAddItem" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="3" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>


      <Button inherits="UIPanelDynamicResizeButtonTemplate" name="$parentDeleteList" text="Delete List">
        <Anchors>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-3" y="3"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

    </Frames>

  </Frame>

